# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.thefringe.com

# Authentication
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key-here

# Database (if needed for future use)
DATABASE_URL=your-database-connection-string

# Email Service (for notifications)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@thefringe.com

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_UPLOAD_ENDPOINT=/api/upload

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Payment Processing (if needed)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Security
NEXT_PUBLIC_SITE_URL=https://thefringe.com
CSRF_SECRET=your-csrf-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COOKIES=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false